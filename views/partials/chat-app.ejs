<style>
    .chatapp-container {
        display: flex;
        height: auto;
    }

    .convo-container {
        width: 170px;
        overflow-y: auto;
        left: 0;
        position: absolute;
        padding: 5px;
        border: 1px solid rgb(204, 204, 204);
        border-radius: 5px;
        margin: 10px;
        height: calc(100% - 80px);
        overflow: hidden;
    }
    
    .search-convo {
        width: 100%;
        height: 25px;
        font-family: "pixel";
        font-size: 12px;
        border-radius: 3px;
    }

    .conversations {
        overflow-y: auto;
        height: calc(100% - 40px);
        scrollbar-width: thin;
    }

    .chat-container {
        display: block;
        width: calc(100% - 200px);
        overflow-y: hidden;
        overflow-x: hidden;
        border: 1px solid rgb(204, 204, 204);
        border-radius: 5px;
        position: absolute;
        right: 0;
        margin: 10px;
        height: calc(100% - 80px);
    }

    .chat-toolbar {
        border-bottom: 1px solid rgb(204, 204, 204);
        width: 100%;
        height: 50px;
        padding: 10px;
        display: block;
        font-family: "pixeloid";
        /* font-size: 11px; */
    }

    .name-status-field {
        display: flex;
        font-size: 11px;
    }

    .updated-field {
        display: flex;
        font-size: 8px;
    }


    .chat-messages {
        width: 100%;
        height: calc(100% - 100px);
        overflow-y: scroll;
        display: block;
        padding: 15px;
        scrollbar-width: none;
    }

    .chat-messages::-webkit-scrollbar-thumb {
        background-color: #000;
    }

    .bottom-dock {
        position: absolute;
        bottom: 0;
        display: flex;
        width: calc(100% - 20px);
        margin-left: 10px;
        margin-right: 10px;
        padding: 0;
    }

    .message-input {
        position: static;
        width: 100%;
        height: 30px;
        border: 1px solid rgb(163, 163, 163);
        outline: none;
    }

    .message-input::placeholder {
        font-family: "pixeloid";
        font-size: 10px;
    }

    .submit-text {
        width: 30px;
        height: 30px;
        border: 1px solid black;
        border-radius: 5px;
        /* box-shadow: 0 -2px #fff, 0 -4px #000, 2px 0 #fff, 2px -2px #000, 4px 0 #000, 0 2px #fff, 0 4px #000, -2px 0 #fff, -2px 2px #000, -4px 0 #000, -2px -2px #000, 2px 2px #000; */
        background-color: rgb(255, 255, 255);
        outline: none;
        margin-left: 5px;
    }

    .submit-text:focus {
        outline: none;
    }

    .send-text-img {
        width: 15px;
        height: 15px;
        margin-bottom: 3px;
    }

    .submit-text:hover .send-text-img {
        width: 17px;
        height: 17px;
        margin-bottom: 2px;
    }

    

    
    .bubble {
        position: relative;
        display: block;
        margin: 15px;
        font-family: "pixeloid";
        font-size: 10px;
        /* letter-spacing: 1px; */
        word-spacing: 1px;
        line-height: 1.3em;
        background-color: #fff;
        color: #000;
        padding: 5px;
        box-shadow: 0 -1px #fff, 0 -2px #000, 1px 0 #fff, 1px -1px #000, 2px 0 #000, 0 1px #fff, 0 2px #000, -1px 0 #fff, -1px 1px #000, -2px 0 #000, -1px -1px #000, 1px 1px #000;
        /* box-sizing: border-box; */
        width: fit-content;
        max-width: 45%;
        flex-direction: column;
    }

    .bubble.right {
        margin-left: auto;
        max-width: 45%;
    }

